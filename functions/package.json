{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "scripts": {
    "prettier": "pretty-quick --pattern **/firestore/**/*.js --pattern **/utils/**/*.js",
    "lint": "eslint .",
    "test": "jest --detectOpenHandles --coverage --silent --reporters=\"jest-dot-reporter\"",
    "test:watch": "jest --watch --silent",
    "test:ci": "jest --ci --runInBand --coverage --verbose --reporters=\"default\" --reporters=\"jest-junit\"",
    "serve": "firebase serve --only functions",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "jest-junit": {
    "outputDirectory": "./reports/junit",
    "outputName": "results.xml"
  },
  "dependencies": {
    "ajv": "^6.10.0",
    "camelcase": "^5.3.1",
    "crypto": "^1.0.1",
    "firebase-admin": "^7.3.0",
    "firebase-functions": "^2.3.0",
    "glob": "^7.1.3",
    "googleapis": "^38.0.0",
    "husky": "^1.3.1"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "eslint": "^5.12.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-jest": "^22.4.1",
    "eslint-plugin-promise": "^4.0.1",
    "firebase-functions-test": "^0.1.6",
    "firebase-tools": "^6.7.1",
    "jest": "^24.7.1",
    "jest-dot-reporter": "^1.0.7",
    "jest-junit": "^6.3.0",
    "prettier": "^1.16.4",
    "pretty-quick": "^1.10.0",
    "sinon": "^7.3.1"
  },
  "engines": {
    "node": "8"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "private": true
}
