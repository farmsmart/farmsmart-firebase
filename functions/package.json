{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "scripts": {
    "prettier": "pretty-quick --pattern functions/**/firestore/**/*.js --pattern functions/**/utils/**/*.js",
    "lint": "eslint .",
    "test": "jest unit --detectOpenHandles --coverage --silent --reporters=\"jest-dot-reporter\"",
    "test:spec": "jest spec --detectOpenHandles",
    "test:watch": "jest --watch --silent",
    "test:ci": "jest unit --ci --runInBand --coverage --verbose --reporters=\"default\" --reporters=\"jest-junit\"",
    "test:debug": "jest --watch --verbose false",
    "serve": "firebase serve --only functions",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "set:config": "firebase functions:config:set"
  },
  "jest-junit": {
    "outputDirectory": "./reports/junit",
    "outputName": "results.xml"
  },
  "dependencies": {
    "@slack/web-api": "^5.0.1",
    "ajv": "^6.10.0",
    "camelcase": "^5.3.1",
    "crypto": "^1.0.1",
    "firebase-admin": "^8.2.0",
    "firebase-functions": "^3.0.1",
    "glob": "^7.1.4",
    "googleapis": "^38.0.0",
    "husky": "^1.3.1"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-jest": "^22.6.4",
    "eslint-plugin-promise": "^4.1.1",
    "firebase-functions-test": "^0.1.6",
    "firebase-tools": "^6.10.0",
    "jest": "^24.8.0",
    "jest-dot-reporter": "^1.0.8",
    "jest-junit": "^6.4.0",
    "prettier": "^1.17.1",
    "pretty-quick": "^1.11.0",
    "sinon": "^7.3.2"
  },
  "engines": {
    "node": "8"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "private": true
}
