{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "scripts": {
    "prettier": "pretty-quick --pattern **/db/**/*.js --pattern **/utils/**/*.js",
    "lint": "eslint .",
    "test": "jest unit --detectOpenHandles --coverage --silent",
    "serve": "firebase serve --only functions",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "snyk-protect": "snyk protect",
    "prepare": "npm run snyk-protect"
  },
  "dependencies": {
    "ajv": "^6.10.0",
    "camelcase": "^5.3.1",
    "crypto": "^1.0.1",
    "firebase-admin": "~7.0.0",
    "firebase-functions": "^2.2.0",
    "glob": "^7.1.3",
    "googleapis": "^38.0.0",
    "snyk": "^1.189.0"
  },
  "devDependencies": {
    "chai-as-promised": "^7.1.1",
    "eslint": "^5.12.0",
    "eslint-plugin-jest": "^22.4.1",
    "eslint-plugin-promise": "^4.0.1",
    "firebase-functions-test": "^0.1.6",
    "jest": "^24.7.1",
    "jest-dot-reporter": "^1.0.7",
    "prettier": "^1.16.4",
    "pretty-quick": "^1.10.0",
    "sinon": "^7.3.1"
  },
  "engines": {
    "node": "8"
  },
  "jest": {
    "testMatch": [
      "**/db/**/*unit.test.js",
      "**/utils/**/*unit.test.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "testEnvironment": "node",
    "verbose": false,
    "reporters": [
      "jest-dot-reporter"
    ]
  },
  "private": true,
  "snyk": true
}
